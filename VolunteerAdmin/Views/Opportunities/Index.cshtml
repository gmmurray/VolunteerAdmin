@model IEnumerable<VolunteerAdmin.Models.Opportunity>

@{
    ViewData["Title"] = "Index";
}

<h1>Manage Opportunities</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CenterID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpportunityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpportunityDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CenterID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpportunityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpportunityDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OpportunityID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OpportunityID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OpportunityID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
